<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_200"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/one_pass"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/indigo_A400"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/one_text"
                android:text="1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="@font/omnes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/check_1"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:contentDescription="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/separator_one"
            android:background="@color/gray_500"
            android:layout_width="50dp"
            android:layout_height="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/two_pass"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/gray_500"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/two_text"
                android:text="2"
                android:padding="3dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/omnes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/check_2"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:contentDescription="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/separator_two"
            android:background="@color/gray_500"
            android:layout_width="50dp"
            android:layout_height="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/three_pass"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/gray_500"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/three_text"
                android:text="3"
                android:padding="3dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/omnes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/check_3"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:contentDescription="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>