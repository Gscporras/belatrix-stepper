<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="soy un componente"
            android:fontFamily="@font/omnes"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.whitestudios.stepper.components.button.Button
                android:id="@+id/button_back_first"
                app:button_background="@color/white"
                app:button_text_color="@color/black"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </com.whitestudios.stepper.components.button.Button>

            <com.whitestudios.stepper.components.button.Button
                android:id="@+id/button_second"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </com.whitestudios.stepper.components.button.Button>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>